---
const style = {
  display: "inline-block",
  padding: "1px 10px",
  marginRight: "4px",
  marginTop: "2px",
  borderRadius: "2.5px",
  borderColor: "white",
  color: "#FFFFFF",
  backgroundColor: "#076678",
  textAlign: "center",
  transition: "background-color 0.3s",
  cursor: "pointer",
};

const { url, label } = Astro.props;
---

<a
  href={url}
  target="_blank"
  class="mr-1 cursor-pointer rounded border border-neutral-700 px-2 pb-1 pt-0 text-center text-xs transition-all duration-300 hover:-translate-y-2 hover:border-neutral-400"
>
  {label}
</a>
